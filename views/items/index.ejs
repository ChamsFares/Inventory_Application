<!DOCTYPE html>
<html>
  <head>
    <title>Items</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        color: #333;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        margin: 10px 0;
      }
      a {
        text-decoration: none;
        color: #007bff;
      }
      a:hover {
        text-decoration: underline;
      }
      .button {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
      }
      .button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <h1>Items</h1>
    <ul>
      <% items.forEach((item) => { %>
      <li>
        <a href="/items/<%= item.id %>"><%= item.name %></a> - $<%=
        item.price.toFixed(2) %> - Quantity: <%= item.quantity %>
      </li>
      <% }); %>
    </ul>
    <a href="/items/new" class="button">Add a New Item</a>
  </body>
</html>
